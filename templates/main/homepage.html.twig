{% extends 'base.html.twig' %}
{% block title %}{% endblock %}

{% block body %}
    <section class="extension-wrapper | mt-11 sm:mt-[74px] text-center
">
        <div class="extension-header | flex flex-col gap-[27px] items-center mb-[41px] sm:flex-row sm:justify-between">
            <h2 class="text-head">Extension List</h2>
            <div class="extension-filter-group flex gap-4">
                <a href="{{ path('app_homepage') }}"
                   class="text-button px-[15px] py-4 min-w-16 hover:text-neutral dark:hover:text-neutral-900 rounded-[28px] shadow-md border border-neutral-300
                   dark:border-accent-red-700 bg-accent-red-500 text-neutral dark:text-neutral-900 dark:border-accent-red-500 hover:bg-accent-red-700 hover:border-accent-red-700 focus:outline-accent-red-500 focus:outline-offset-3 focus:border-none transition-all duration-300">All</a>
                <a href="{{ path('app_filter_active') }}"
                   class="text-button px-[15px] py-4 min-w-16 hover:text-neutral rounded-[28px] shadow-md border border-neutral-300
                   dark:border-neutral-500 bg-neutral text-neutral-900 dark:bg-neutral-700 dark:text-neutral hover:bg-accent-red-700 dark:hover:bg-neutral-600 hover:border-accent-red-700 dark:hover:border-neutral-600
                   focus:outline-accent-red-500 focus:outline-offset-3 focus:border-none dark:focus:bg-neutral-600 dark:focus:border-neutral-600 transition-all duration-300">Active</a>
                <a href="{{ path('app_filter_inactive') }}"
                   class="text-button px-[15px] py-4 min-w-16 hover:text-neutral rounded-[28px] shadow-md border border-neutral-300
                   dark:border-neutral-500 bg-neutral text-neutral-900 dark:bg-neutral-700 dark:text-neutral hover:bg-accent-red-700 dark:hover:bg-neutral-600 hover:border-accent-red-700 dark:hover:border-neutral-600
                   focus:outline-accent-red-500 focus:outline-offset-3 focus:border-none dark:focus:bg-neutral-600 dark:focus:border-neutral-600 transition-all duration-300">Inactive</a>
            </div>
        </div>
        <div class="extension-list | grid grid-cols-1 justify-items-center md:grid-cols-3 grid-flow-row gap-3">
            {% for extension in extensions %}
                {{ include('main/_extensionCard.html.twig') }}
            {% endfor %}
        </div>
    </section>
{% endblock %}
